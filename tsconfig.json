{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES6",
    "sourceMap": true,
    "lib": ["es6"],
    "typeRoots": ["./node_modules/@types", "./types/*.d.ts"],
    "noEmit": false,
    "useUnknownInCatchVariables": false,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": { "@src/*": ["src/*"] },
    "outDir": "dist",
    "rootDir": "."
  },
  "include": ["index.ts", "src", "express", "dev/seed-mongo"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
